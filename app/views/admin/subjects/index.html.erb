<div class="row">
  <div class="col-md-10 col-offset-2">
    <h2><%= t "admin.list_subject" %></h2>
    <table class="table table-striped table-hover">
      <thead>
        <th><%= t "admin.subject_title" %></th>
        <th><%= t "admin.subject_description" %></th>
        <th><%= t "admin.subject_edit" %></th>
        <th><%= t "admin.subject_delete" %></th>
      </thead>
      <tbody>
        <% @subjects.each do |subject| %>
          <tr>
            <td><%= subject.title %></td>
            <td><%= subject.description %></td>
            <td>
              <%= link_to [:edit, :admin, subject], class: "btn btn-primary btn-xs" do %>
                <span class="glyphicon glyphicon-eye-open"></span> <%= t "admin.edit_subject" %>
              <% end %>
            </td>
            <td>
              <%= link_to [:admin, subject], method: :delete, data: { confirm: "You sure?" },
                class: "btn btn-primary btn-xs" do %>
                <span class="glyphicon glyphicon-eye-open"></span> <%= t "admin.destroy_subject" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to new_admin_subject_path, class: "btn btn-primary btn-xs" do %>
    <span class="glyphicon glyphicon-eye-open"></span> <%= t "admin.new_subject" %>
  <% end %>
</div>
<div class="text-center">
  <%= will_paginate %>
</div
