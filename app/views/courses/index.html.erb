<div class="row">
  <div class="col-md-8 col-offset-2">
    <% if logged_in? %>
      <ul class="all-courses">
        <% @courses.each do |course| %>
          <p class="course-name"><%= link_to course.name, course %></p>
          <p><%= course.description %></p>
        <% end %>
      </ul>
    <% else %>
      <script type="text/javascript"> alert("<%= t("alert.message_login_course")%>");</script>
    <% end %>
  </div>
</div>
