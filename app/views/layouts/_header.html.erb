<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("static_pages.home"), root_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("layouts.users"), "#" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "layouts.account" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("static_pages.profile"), current_user %></li>
              <li><%= link_to t("static_pages.setting"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("static_pages.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("static_pages.login"), login_path %></li>
          <li><%= link_to t("static_pages.signup"), signup_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
