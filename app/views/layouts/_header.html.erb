<header class="navbar navbar-fixed-top navbar-inverse">
  <%= hidden_field_tag "logging?", logged_in?, {id: "logged_in"} %>
  <div class="container">
    <nav>
      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to t("static_pages.home"), root_path %></li>
        <% if logged_in? && current_user.admin? %>
          <li><%= link_to t("static_pages.course"), admin_courses_path %></li>
          <li><%= link_to t("static_pages.subjects"), admin_subjects_path %></li>
          <li><%= link_to t("layouts.users_admin"), admin_users_path %></li>   
        <% else%>
          <li><%= link_to t("static_pages.course"), courses_path, id: "course_header" %></li>
          <li><%= link_to t("static_pages.subjects"), subjects_path, id: "subject_header" %></li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li><%= link_to t("layouts.users"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "layouts.account" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("static_pages.profile"), current_user %></li>
              <li><%= link_to t("layouts.setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("static_pages.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("static_pages.login"), login_path %></li>
          <li><%= link_to t("static_pages.signup"), new_user_path %></li>       
        <% end %>
      </ul>
    </nav>
  </div>
</header>
